{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "allowJs": true,
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "dist",
        "lib": [
            "es2016",
            "dom"
        ],
        "typeRoots" : ["./node_modules/@types"]
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.js"
    ],
    "exclude": [
        "./src/**/*.spec.ts"
    ]
}